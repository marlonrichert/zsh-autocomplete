#!/bin/zsh
local 0=${(%):-%N}

$0() {
  typeset -gH curcontext=${WIDGET}:::

  local +h -a comppostfuncs=( ${(%):-%N}.post "$comppostfuncs[@]" )
  compstate[old_list]=
  _main_complete _autocomplete.history_lines

  unset curcontext
  (( compstate[nmatches] > 0 ))
}

$0.post() {
  compstate[insert]='menu:0'
}

$0 "$@"
